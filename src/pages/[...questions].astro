import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import YesNoAnswer from "../reactComponents/YesNoAnswer.jsx";
import AbcAnswer from "../reactComponents/AbcAnswer.jsx";

import { data } from "../data/data.ts";

 

 

export async function getStaticPaths() {
  const length = 10;
  const questions = Array.from({ length }, (_, i) => i + 1).map((nr) => {
    return {
      slug: `pytanie-${nr}`,
      nextSlug: `pytanie-${nr + 1}`,
      text: `Pytanie nr ${nr}`,
    };
  });

  return questions.map((question) => {
    return {
      params: { questions: question.slug },
      props: { question, data },
    };
  });
}
