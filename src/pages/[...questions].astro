---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Counter from '../reactComponents/Counter.jsx'
 

export async function getStaticPaths() {
  const length = 10
  const questions = Array.from({ length }, (_, i) => i+1).map(nr => {
    return {
          slug: `pytanie-${nr}`,
          nextSlug: `pytanie-${nr+1}`,
          text: `Pytanie nr ${nr}`,
          }
      }
  )
    
  return questions.map((props) => {
    return {
      params: {  questions : props.slug },
      props ,
    };
  });
}

const {   text, slug, nextSlug } = Astro.props;


---
 

<Layout title={text}>
 
  <section class="page-content">
    <div class="container">
   
        <Card>
          <h3>{text}</h3>
          
<button type="button" class="btn btn-primary">Primary</button>
<button type="button" class="btn btn-secondary">Secondary</button>
<button type="button" class="btn btn-success">Success</button>
<button type="button" class="btn btn-danger">Danger</button>
<button type="button" class="btn btn-warning">Warning</button>
<button type="button" class="btn btn-info">Info</button>
<button type="button" class="btn btn-light">Light</button>
<button type="button" class="btn btn-dark">Dark</button>

<button type="button" class="btn btn-link">Link</button>

      <Counter   />
      <Counter  />
         
          <a class="btn" href={`/${nextSlug}`}>Next question</a>
        </Card>
 
    </div>
  </section>
</Layout>
