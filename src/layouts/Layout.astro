---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import GetDataFromendpointComponent from "../reactComponents/GetDataFromendpointComponent.jsx";
import Mp3Player from "../reactComponents/Mp3Player";
import RecalculateGivenAnswersCount from "../reactComponents/RecalculateGivenAnswersCount";
import MyDrawer from "../reactComponents/MyDrawer";

export interface LayoutProps {
  title: string;
}

const { title } = Astro.props as LayoutProps;
---

<!DOCTYPE html>
<html lang="pl-PL">
  <head>
    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-B271WN0NSR"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-B271WN0NSR");
    </script>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>

    <title>{title}</title>

    <script is:inline>
      const themeName = localStorage.getItem("_themeName") || "jasny";
      console.log(1, "themeName", themeName, themeName === "ciemny");

      if (themeName === "ciemny") {
        const link = document.createElement("link");
        link.rel = "stylesheet";
        link.type = "text/css";
        link.href = "https://bootswatch.com/5/darkly/bootstrap.css";
        document.head.appendChild(link);
      }

      if (themeName === "niebieski") {
        const link = document.createElement("link");
        link.rel = "stylesheet";
        link.type = "text/css";
        link.href = "https://bootswatch.com/5/lumen/bootstrap.css";
        document.head.appendChild(link);
      }
    </script>

    <style is:global>
      p {
        font-size: 1.25rem;
        font-weight: 400;
      }
    </style>
  </head>
  <body>
    <Header />

    <main>
      <div class="container-fluid">
        <div class="row">
          <div class="col text-center">
            <slot />
          </div>
        </div>
      </div>
    </main>

    <MyDrawer client:load />

    <Mp3Player client:load />

    <Footer title={title}/>

    <GetDataFromendpointComponent client:load />
    <RecalculateGivenAnswersCount client:load />
  </body>
</html>
