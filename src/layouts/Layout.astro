---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import LoadQuestions from "../reactComponents/LoadQuestions.jsx";

export interface Props {
  title?: string;
}

const { title = "Testy na prawo jazdy" } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    ></script>

    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />

    <title>{title}</title>
  </head>
  <body class="mt-5 p-3 border-top border-primary">
    <Header />

    <main>
      <div class="container-fluid">
        <div class="row">
          <div
            class="col 111111111111111111 this-is-wrapper-from-layout text-center"
          >
            <slot />
          </div>
        </div>
      </div>
    </main>
    <Footer />

    <LoadQuestions client:load />
  </body>
</html>
